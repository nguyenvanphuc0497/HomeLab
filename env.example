# Global defaults (copy to .env and adjust; keep secrets out of git)

# Identity / domains
GLOBAL_DOMAIN=example.com
GLOBAL_EMAIL=you@example.com
TZ=Asia/Ho_Chi_Minh

# Git / CI
GITHUB_REPO=github.com/you/homelab
GITHUB_MIRROR_PAT=ghp_xxx               # PAT for mirroring; keep private
GITEA_URL=https://gitea.example.com
GITEA_TOKEN=gitea_xxx                   # keep private

# Runner
GH_RUNNER_LABELS=homelab,self-hosted
GH_RUNNER_TOKEN=runner_xxx              # registration token; keep private

# Registry (if private)
REGISTRY_URL=registry.example.com
REGISTRY_USER=registry_user
REGISTRY_PASSWORD=registry_password     # keep private

# Reverse proxy / ACME
ACME_EMAIL=you@example.com
ACME_EAB_KID=                           # optional if using EAB
ACME_EAB_HMAC_KEY=                      # optional if using EAB

# Monitoring / alerts
ALERT_TELEGRAM_BOT_TOKEN=               # keep private
ALERT_TELEGRAM_CHAT_ID=
ALERT_DISCORD_WEBHOOK=

# Misc
PUID=1000
PGID=1000
UMASK=002
DATA_ROOT=/srv/homelab

